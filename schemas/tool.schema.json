{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://github.com/bertus37987/ai-tools-directory/schemas/tool.schema.json",
  "title": "AI Tool",
  "description": "Schema for AI tool entries in the directory",
  "type": "object",
  "required": ["id", "name", "slug", "category_id", "short_description", "website_url", "meta"],
  "properties": {
    "id": {
      "type": "string",
      "pattern": "^[a-z0-9-]+$",
      "description": "Unique identifier for the tool"
    },
    "name": {
      "type": "string",
      "minLength": 2,
      "maxLength": 100,
      "description": "Display name of the tool"
    },
    "slug": {
      "type": "string",
      "pattern": "^[a-z0-9-]+$",
      "description": "URL-friendly slug"
    },
    "category_id": {
      "type": "string",
      "description": "Reference to category ID"
    },
    "short_description": {
      "type": "string",
      "maxLength": 220,
      "description": "Brief description for cards and previews"
    },
    "long_description": {
      "type": "string",
      "description": "Detailed description with features and benefits"
    },
    "logo_url": {
      "type": "string",
      "format": "uri",
      "description": "URL to tool logo image"
    },
    "website_url": {
      "type": "string",
      "format": "uri",
      "description": "Official website URL"
    },
    "affiliate_link": {
      "type": "string",
      "description": "Affiliate tracking link"
    },
    "pricing": {
      "type": "object",
      "properties": {
        "type": {
          "enum": ["free", "freemium", "paid", "lifetime"],
          "description": "Pricing model type"
        },
        "starting_price": {
          "type": "number",
          "minimum": 0,
          "description": "Starting price amount"
        },
        "currency": {
          "type": "string",
          "pattern": "^[A-Z]{3}$",
          "description": "Currency code (ISO 4217)"
        },
        "billing_cycle": {
          "enum": ["monthly", "yearly", "one-time"],
          "description": "Billing frequency"
        }
      }
    },
    "features": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "description": "List of key features"
    },
    "tags": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "description": "Searchable tags"
    },
    "rating": {
      "type": "number",
      "minimum": 0,
      "maximum": 5,
      "description": "Average user rating"
    },
    "reviews_count": {
      "type": "integer",
      "minimum": 0,
      "description": "Number of reviews"
    },
    "deal": {
      "type": "object",
      "properties": {
        "active": {
          "type": "boolean",
          "description": "Whether deal is currently active"
        },
        "discount": {
          "type": "string",
          "description": "Discount description"
        },
        "badge": {
          "type": "string",
          "description": "Deal badge text"
        },
        "expires_at": {
          "type": "string",
          "format": "date-time",
          "description": "Deal expiration date"
        }
      }
    },
    "meta": {
      "type": "object",
      "required": ["created_at", "updated_at", "status"],
      "properties": {
        "created_at": {
          "type": "string",
          "format": "date-time",
          "description": "Creation timestamp"
        },
        "updated_at": {
          "type": "string",
          "format": "date-time",
          "description": "Last update timestamp"
        },
        "status": {
          "enum": ["draft", "published", "archived"],
          "description": "Publication status"
        }
      }
    }
  }
}